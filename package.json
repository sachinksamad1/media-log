{
  "name": "media-log-monorepo",
  "packageManager": "pnpm@10.28.1",
  "private": true,
  "scripts": {
    "dev:web": "cd web && pnpm dev",
    "dev:backend": "cd backend && pnpm dev",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:backend\"",
    "build:web": "cd web && pnpm build",
    "build:backend": "cd backend && pnpm build",
    "build": "pnpm build:web && pnpm build:backend",
    "deploy": "firebase deploy",
    "deploy:web": "firebase deploy --only hosting",
    "deploy:backend": "firebase deploy --only functions",
    "clean": "rimraf web/dist backend/dist"
  },
  "engines": {
    "node": "24"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "rimraf": "^6.1.2"
  }
}